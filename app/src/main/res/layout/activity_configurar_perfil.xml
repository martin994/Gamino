<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfigurarPerfil"
    android:background="@drawable/gradient"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Configurar_Perfil_img_Avatar"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/ok" />

        <TextView
            android:id="@+id/Configurar_Perfil_tV_Usuario"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:text="@string/ConfUsuario"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/Configurar_Perfil_btn_Intereses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/ConfIntereses"
        android:background="@drawable/button_rounded"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>/>

    <Button
        android:id="@+id/Configurar_Perfil_btn_Capturar_Foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/ConfCapturar"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>/>


    <Button
        android:id="@+id/Configurar_Perfil_btn_Cargar_Foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ConfCargar"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>/>

    <Button
        android:id="@+id/Configurar_Perfil_btn_Omitir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:text="@string/ConfAvanzar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>/>
</LinearLayout>