<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="146dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/contenedorInteresProgress"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/InteresesTVNobre"
                android:layout_width="308dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contenedorInteresesTVNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ContenedorNombreIntereses" />

                <TextView
                    android:id="@+id/contenedorInteresTVDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:text="@string/ContenedorDescripcionIntereses" />
            </LinearLayout>

            <ImageView
                android:id="@+id/contenedorInteresesImg"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="TODO"
                android:visibility="gone"
                tools:srcCompat="@tools:sample/avatars[2]" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>