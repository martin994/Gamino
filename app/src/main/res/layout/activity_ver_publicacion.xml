<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".VerPublicacion">

    <TextView
        android:id="@+id/ver_publicacion_tV_titulo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/PubTitulo"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ver_publicacion_tV_subtitulo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/PubSubtitulo"
        android:textColor="#303030"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ver_publicacion_tV_cuerpo"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:text="@string/PubCuerpo"
        android:textColor="#303030"
        android:textSize="14sp" />

    <Button
        android:id="@+id/ver_publicacion_btn_comentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="@string/PubComentar" />

    <Button
        android:id="@+id/ver_publicacion_btn_volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="@string/PubVolver" />
</LinearLayout>